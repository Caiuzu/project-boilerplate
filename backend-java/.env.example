# Exemplo de variáveis de ambiente para o boilerplate Java Spring Boot

# Banco de Dados
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres

# Spring Datasource
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/app
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Porta do servidor
SERVER_PORT=8080

# JWT
JWT_SECRET=troque-por-uma-chave-secreta

# Mercado Pago (exemplo, remova se não usar)
MERCADO_PAGO_BASE_URL=https://api.mercadopago.com/
MERCADO_PAGO_TOKEN=sua-chave
MERCADO_PAGO_USER_ID=seu-user-id
MERCADO_PAGO_POS_ID=seu-pos-id
MERCADO_PAGO_NOTIFICATION_URL=https://sua-url.com/api/payments/webhook

# Azure Storage (exemplo, remova se não usar)
AZURE_STORAGE_CONNECTION_STRING=sua-connection-string
AZURE_STORAGE_CONTAINER_NAME=seu-container